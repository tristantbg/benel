@keyframes rotate {
    100% {
        transform(rotate(360deg))
    }
}

@keyframes dash {
    0% {
        stroke-dasharray: 1, 200;
        stroke-dashoffset: 0
    }
    30% {
        stroke-dasharray: 89, 200;
        stroke-dashoffset: -35px
    }
    100% {
        stroke-dasharray: 89, 200;
        stroke-dashoffset: -124px
    }
}

.loader
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background $primary
	z-index 10000
	.spinner
		width 50px
		height 50px
		align()
		.circular
			animation rotate 2s linear infinite
			height 100%
			transform-origin center center
			width 100%
			position absolute
			top 0
			bottom 0
			left 0
			right 0
			margin auto
			.path
				stroke $secondary
				stroke-dasharray 1, 200
				stroke-dashoffset 0
				animation dash 1.5s ease-in-out infinite, color 6s ease-in-out infinite

.menu
	mix-blend-mode difference
	color $primary
	h1
		display inline-block
		margin-bottom .5em
		position relative
	ul
		display none
	li
		text-transform lowercase
	a:hover h1:after, a.active h1:after
		content ''
		width 100%
		height .08em
		position absolute
		bottom -1vh
		left 0
		background $primary

#main-menu
	position fixed
	top $padding
	left $padding
	z-index 100

#shop-menu
	text-align right
	position fixed
	top $padding
	right $padding
	z-index 100

#container
	min-height 100vh
	background $primary
	
.owl-carousel .owl-item img
	width auto

.inner.project
	#slide-caption
		position fixed
		bottom ($padding/2)
		left $padding
		z-index 100
		font-size 4vh
		p
			display inline

.slider
	height 92vh
	img
		display block
	.flickity-viewport
		height 100%
	.content-item
		height 100%

.inner.home
	height 100vh
	background-size cover
	background-position center

.inner.page
	padding 15vh 4vh 0

.inner.product
	.col
		span(1/2)
		height 100vh
		overflow hidden
		img
			width auto
			max-width 100%
			max-height 100%
	.infos
		position relative
		padding $padding ($padding*5) $padding $padding
		border-left .18em solid
		.text
			margin-bottom 2em
		.meta.cf
			font-size 5vh
			li
				display inline-block
				margin-right 3em
		.nextprev
			position absolute
			bottom $padding
			left $padding
			width calc(100% - 8vh)
			flexbox()
			justify-content space-between

body.home
	#main-menu
		ul
			display block

body.page, body.project
	#main-menu
		h1::after
			content ''
			width 100%
			height .08em
			position absolute
			bottom -1vh
			left 0
			background $primary

body.shop
	#shop-menu
		h1::after
			content ''
			width 100%
			height .08em
			position absolute
			bottom -1vh
			left 0
			background $primary
	.slider
		height 100vh
		//padding-top 13vh
		.flickity-viewport
			height 100%
		.content-item
			height 92%
		.item-caption
			height 8%
			form
				display block
				height 100%
			.flex
				display block
				height 100%
				button
					cursor pointer
					span(1/2)
					height 100%
					border none
					border-top .1em solid
					border-bottom .1em solid
					border-left .1em solid
					text-align center
	#shop-menu
		ul
			display block
	.btn.add, .btn.remove
		cursor pointer
		border .08em solid
		border-radius 100%
		height 4vh
		width 4vh
		display inline-block
		text-align center
		padding-bottom .5vh
	table
		width 100%
	td, th
		border-bottom .1em solid $secondary
	th, td
		padding .2em 0
	th.head
		padding-bottom .8em
	table:last-child
		border none
	#pay
		font-size 5vh
		margin-top 1em
		text-align right
	button
		border .08em solid $secondary
		background transparent

body.project, body.products
	overflow hidden